
delimiter //
drop procedure if exists bucle_while//   -- Elimina el procedimiento si ya existe
create procedure bucle_while()			-- Crea el proceso bucle_while()
begin
	declare contador int;               -- Se declara contador para contar las iteraciones
	declare resultado varchar(50);      -- Se declara resultado para guardar los números concatenados
    set contador=1;                     -- Se inicia el contador en 1
	set resultado=' ';                  -- Se inicializa la cadena resultado vacía
    
    bucle1:while contador<=10 do        -- Mientras contador sea menor o igual a 10, repite el bloque
		set resultado =concat(resultado,'-', contador);  -- Agrega el valor del contador a la cadena resultado
		set contador=contador+1;                        -- Aumenta el contador en 1
        if contador=6 then                              -- Si el contador llega a 6
			leave bucle1;                              -- Sale del bucle antes de terminar
		end if;
	end while;                                         -- Fin del bucle WHILE
    
    select resultado;                                 -- Muestra la cadena con los números generados
end//

call bucle_while()//                                  -- Ejecuta TODO el procedimiento
