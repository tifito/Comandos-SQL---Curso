
delimiter //                             -- Cambia el delimitador temporalmente
drop procedure bucle//                   -- Elimina el procedimiento si ya existe

create procedure bucle()                 -- Crea el procedimiento llamado "bucle"
begin
	declare contador int;                -- Declara la variable contador
	set contador = 1;                    -- Inicializa contador en 1
    
    bucle1: LOOP                         -- Inicia un bucle con la etiqueta bucle1
		select contador;                 -- Muestra el valor actual del contador
		set contador = contador + 1;     -- Aumenta el contador en 1
        if contador > 10 then            -- Verifica si el contador pasa de 10
			leave bucle1;                -- Sale del bucle si la condici√≥n se cumple
		end if;
	end loop;                            -- Fin del bucle
end//                                    -- Fin del procedimiento

call bucle()//                           -- Ejecuta el procedimiento

